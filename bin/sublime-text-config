#!/bin/bash

if test -f $HOME/Library/Application\ Support/Sublime\ Text\ 3/Installed\ Packages/Package\ Control.sublime-package; then
  rm -rf $HOME/Library/Application\ Support/Sublime\ Text\ 3/Packages/User
  ln -fs $PWD/sublime-text $HOME/Library/Application\ Support/Sublime\ Text\ 3/Packages/User
  echo "ğŸ”— Symbolic link for Sublime Text is created"
else
  subl
  read -p "âœ‹ Install Package Control in Sublime Text then hit enter"
  pkill "Sublime Text"
  rm -rf $HOME/Library/Application\ Support/Sublime\ Text\ 3/Packages/User
  ln -fs $PWD/sublime-text $HOME/Library/Application\ Support/Sublime\ Text\ 3/Packages/User
  echo "ğŸ”— Symbolic link for Sublime Text is created"
  subl
  read -p "â³ Sublime Text is currently completing packages installation, hit enter when it is done"
  pkill "Sublime Text"
  smerge .
  read -p "âœ‹ Discard unwanted changes on Preferences.sublime-settings then hit enter"
fi
