#!/bin/bash

# Alacritty https://github.com/alacritty/alacritty
brew install --cask alacritty

ln -fs $PWD/alacritty/alacritty.yml.symlink $HOME/.alacritty.yml
ln -fs $PWD/alacritty/dracula.yml.symlink $HOME/.dracula.yml
echo "ğŸ”— Symbolic links for Alacritty are created"

# Alacritty quits automatically on first opening
open /Applications/Alacritty.app
# So we open it again
open /Applications/Alacritty.app
read -p "â³ Powerlevel10k is currently fetching gitstatusd, hit enter when it is done"
pkill "alacritty"

open /Applications/Alacritty.app
echo "ğŸ‰ Alacritty is ready to use"
